mixin thumbnail-classic( obj )
	// Thumbnail Classic
	a.thumbnail-classic( href= 'images/' + obj.original + '.jpg' data-lightgallery="item")&attributes( attributes )
		+img( obj.img ).thumbnail-classic-image
		.thumbnail-classic-caption
			p.thumbnail-classic-title= obj.title
			p.thumbnail-classic-text= obj.text
		.thumbnail-classic-dummy
